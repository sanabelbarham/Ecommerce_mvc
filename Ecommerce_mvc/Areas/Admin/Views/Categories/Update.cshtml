@using Ecommerce_mvc.Models
@model Category

<form method="post" action="/Admin/Categories/Edit" >
    <input type="hidden" name="id" value="@Model.Id" class="form-control" id="Name" />

     

    <div class="form-group">
        <label for="exampleInputEmail1">Category Name</label>
        <input type="text"  name="name" value="@Model.Name" class="form-control" id="Name" placeholder="Enter Category Name">
        <span  class=" text-danger"asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>


