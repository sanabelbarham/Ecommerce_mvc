@using Ecommerce_mvc.ViewModels
@model List<ProductsViewModel>
<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Image</th>
            <th>Price</th>
            <th>Category</th>

            <th>Action</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {


            <tr>
                <td>@item.Id</td>
                <td>@item.Name </td>
                <td>

                    <img src="@item.ImageUrl" width="100" height="100" />
                </td>
                <td>@item.Price </td>
                <td>@item.CategoryName </td>
               
                <td>
                    <a href="#" class="btn btn-outline-info ">Details </a>
                    <a href="/Admin/Products/Edit/@item.Id" class="btn btn-outline-warning ">Edit </a>
                    <a href="/Admin/Products/Delete/@item.Id" class="btn btn-outline-danger ">Delete </a>


                </td>
            </tr>
        }



    </tbody>
</table>